<div class="booyah-box col-xs-4 col-xs-offset-4">
	<% if @invite.for_spouse? %>
	Invite Spouse

	<% elsif @invite.for_sitter? %>

	Invite Sitter

	<% end %>

	<%= simple_form_for @invite  do |f| %>
		<%= f.hidden_field :invite_kind %>
		<%= f.input :email, :hint => 'Email'  %>
		<%= f.submit 'Send Invite', :class=>"btn btn-primary" %>

	<% end %>
</div>
<br />
<% if @family.present? && @family.familysitters.present? %>
	<div class="col-xs-10 col-xs-offset-1">
		<h2 class="text-center">Current Family Sitters</h2>  <br /><br />
	  		<% @family.sitters.each do |sitter| %>
	  		<div class="col-xs-3 text-center">
	  			<div class="img-responsive family">
	  				<%= image_tag sitter.avatar.thumb, class: "img-circle avatar" if sitter.avatar.thumb.present? %>
	  			</div><br />
	  		 	<%= link_to sitter.first_name + " " + sitter.last_name, user_path(sitter) %><br />
	  			</div>
	  		<% end %>
	  	<br /><br />
		</div>
<% end %>
