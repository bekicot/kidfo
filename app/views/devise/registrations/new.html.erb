<div class="booyah-box col-xs-4 col-xs-offset-4">

<h2>Sign up</h2>
<br />
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :role, value: "sitteruser" %>
    <%= f.input :first_name, required: true, autofocus: true %><br />
    <%= f.input :last_name, required: true, autofocus: true %><br />
    <%= f.input :email, required: true, autofocus: true %><br />
    <%= f.input :phone_number, required: false, autofocus: true %><br />
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %><br />
    <%= f.input :password_confirmation, required: true %>
    <h4>Profile Photo</h4>
     <%= f.file_field :avatar %>
    <br />
  </div>
  <br />
  <div class="form-actions">
    <%= f.button :submit, "Sign Up", :class=>'btn btn-primary' %>
  </div>
  <br />
<% end %>

<%= render "devise/shared/links" %>
</div>