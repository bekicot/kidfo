<!DOCTYPE html>
<html>
<head>
  <title>Kidfo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="apple-touch-icon" href="<%= image_path('ico/60.png') %>">
  <link rel="apple-touch-icon" sizes="76x76" href="<%= image_path('ico/76.png') %>">
  <link rel="apple-touch-icon" sizes="120x120" href="<%= image_path('ico/120.png') %>">
  <link rel="apple-touch-icon" sizes="152x152" href="<%= image_path('ico/152.png') %>">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-touch-fullscreen" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  <meta content="" name="description" />
  <meta content="" name="author" />
  
</head>
<body>
<nav>
  <div class="container-fluid">
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
     <!-- Page Content -->           
    <div class="brand"><%= image_tag 'brand.png', class: "brand" %> <span class="kidfo">KIDFO</span></div>
       <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <!-- START User Info-->
          <div class="visible-lg visible-md m-t-10">
            <div class="pull-left p-r-10 p-t-10 fs-16 font-heading">
              <span class="semi-bold"><%= current_user.first_name %></span> <span class="text-master"><%= current_user.last_name %></span>
            </div>
            <div class="dropdown pull-right">
              <button class="profile-dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="thumbnail-wrapper d32 circular inline m-t-5">
                <%= image_tag current_user.avatar, class: "avatar" if current_user.avatar.present? %>
            </span>
              </button>
              <ul class="dropdown-menu profile-dropdown" role="menu">
                <li><%= link_to 'My Profile', user_path(current_user) %>
                </li>
                <li><%= link_to 'Edit Profile', edit_user_registration_path(current_user) %></li>
                </li>
                <li><%= link_to 'Help', user_path(current_user) %></li>
                <li class="bg-master-lighter">
                  <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
                </li>
              </ul>
            </div>
          </div>
        <% else %>
          <li><%= link_to 'Sign In', new_user_session_path, :class => 'mainlink' %><li>
          <button type="button" class="btn btn-primary btn-cons" data-toggle="modal" data-target="#myFavoriteModal">Join Kidfo
          </button></li>
        <% end %>

        
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>
<br /><br />
  <div class="col-xs-6 col-xs-offset-3">
    <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
     <p class="alert alert-danger"><%= alert %></p>
     <% end %>
    </div>




</body>
</html>
