
<div class="row">
	<div class="booyah-box col-xs-10 col-xs-offset-1">
		<%= image_tag @family.avatar, class: "booyah-box special" if @family.present? %>
		<br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
	</div>
</div>

<div class="row">
	<div class="booyah-box col-xs-4 col-xs-offset-1">
		<h2 class="text-center">Parents/Guardians</h2>  <br /><br />
		<% @family.parents.each do |parent| %>
		<div class="col-xs-4">
		<div class="img-responsive rounded">
			<%= image_tag parent.avatar, class: "avatar" if parent.avatar.present? %>
		 </div>		
			<h2><%= parent.first_name %> <%= parent.last_name %></h2>
			<h4><%= parent.email %></h4>
		</div>
		<% end %>	
	</div>
		
	<div class="booyah-box col-xs-4 col-xs-offset-1">
			<h2 class="text-center">Kids</h2>  <br /><br />
			
		  		<% @family.kids.each do |kid| %>
		  		<div class="col-xs-6">
		  		 	<div class="img-responsive">
						<%= image_tag kid.avatar, class: "img-circle avatar" if kid.avatar.present? %>
				 	</div><br />
				 	<%= link_to kid.name, kid_path(kid) %><br />
		  			</div>
		  		<% end %>
		  	<br /><br />
	</div>
	
</div>




