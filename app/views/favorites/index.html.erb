<div class="row">
	<div class="col-xs-12">
		<div class="col-xs-6">
			<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Favorite Books</h3>
				  </div>
				  <div class="panel-body">
				  <% if @kid.favorites.any? %>
				   <%	@kid.favorites.each_with_index do |book, index| %>
						<div class="col-xs-6 col-sm-6 hideOverflow">
							<%= image_tag book.image_link, class: "img-responsive " if book.image_link.present? %><br /><br />
							<b>Title:</b> <%= book.name %><br />
			    			<b>Description:</b> <%= book.description %><br />
						</div>
					<% end %>
					<br />
				<% end %>
			     
				 <br /><br />
				 <div class="row"></div>
				 <% if current_user && current_user == @kid.user %>
					<%= link_to 'Add Favorite Book', new_kid_favorite_path(@kid), :class => 'btn btn-default' %>
			     	<% end %>
				 </div>
			</div>
		</div>
	</div>
</div>