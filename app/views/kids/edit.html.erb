  <div class="booyah-box col-xs-10 col-xs-offset-1">
  <h2>Edit Kid</h2>
  <%= simple_form_for @kid do |f|  %>
  	 <div class= "row">
  	 	<div class="col-xs-2">
  	 		<div class="img-responsive">
				<%= image_tag @kid.avatar.thumb, class: "img-responsive circle-avatar img-circle kid" if @kid.avatar.present? %>
		 </div><br />
		</div>
	  	<div class="col-xs-4">
			<h2>General Info</h2>
			 	<%= f.input :name %>
				<%= f.input :birthdate, :label => 'Birth Date' %>
				<%= f.input :gender, :as =>:select, :collection => Kid::GENDER %><br />
				<strong>Profile Photo Upload</strong><br/>				
				<%= f.file_field :avatar %>
		</div>
		<div class="col-xs-6">
			<h3>No-Nos</h3>
			<%= f.input :allergies %>
			<%= f.input :nonos, :label => 'Please Avoid (Example: Screens before bed, Dairy)', :input_html => { :cols => 5, :rows => 7 }   %><br />
		</div>
		
    </div>
    <hr>
    <div class= "row">
    	<div class="col-xs-12">
    	  <h3>Eat Details</h3>
    	  <div class="col-xs-4">
				<%= f.input :breakfasttime, :label => 'Breakfast Time', :as => :time, :minute_step => 15 , default: Time.parse("7:00")%>
				<%= f.input :breakfastdetails, :label => 'Details',:input_html => { :cols => 5, :rows => 2 }   %>
			<br /><br />
		  </div>
		  <div class="col-xs-4">
				<%= f.input :lunchtime, :label => 'Lunch Time',:as => :time, :minute_step => 15 , default: Time.parse("12:00")%>
				<%= f.input :lunchdetails, :label => 'Details',:input_html => { :cols => 5, :rows => 2 }   %>
			<br /><br />
		  </div>
		  <div class="col-xs-4">
				<%= f.input :dinnertime, :label => 'Dinner Time', :as => :time, :minute_step => 15 , default: Time.parse("5:30")%>
				<%= f.input :dinnerdetails, :label => 'Details',:input_html => { :cols => 5, :rows => 2 }   %>
			<br /><br />
		  </div>
		  <div class="col-xs-4">
				<%= f.input :snack1time, :label => 'Snack Time 1', :as => :time, :minute_step => 15 , default: Time.parse("10:00")%>
				<%= f.input :snack1details, :label => 'Details',:input_html => { :cols => 5, :rows => 2 }   %>
			<br /><br />
		  </div>
		  <div class="col-xs-4">
				<%= f.input :snack2time, :label => 'Snack Time 2', :as => :time, :minute_step => 15 , default: Time.parse("3:00")%>
				<%= f.input :snack2details, :label => 'Details',:input_html => { :cols => 5, :rows => 2 }   %>
			<br /><br />
		  </div>
		  <div class="col-xs-4">
				<%= f.input :afterdinnertime, :label => 'Dream Feed (or dessert?)', :as => :time, :minute_step => 15 , default: Time.parse("8:00")%>
				<%= f.input :afterdinnerdetails, :label => 'Details',:input_html => { :cols => 5, :rows => 2 }   %>
			<br /><br />
		  </div>

		</div>
	<div class= "row">
    	<div class="col-xs-12">	
		<div class="col-xs-6">
			<h3>Sleep</h3>
				<%= f.input :bedtime, :as => :time, :minute_step => 15 , default: Time.parse("7:30")%>
				<%= f.input :sleeproutine, :label => 'Sleep Routine',:input_html => { :cols => 5, :rows => 7 }   %>
			<br />
		</div>
		<div class="col-xs-6">
			<h3>Naps</h3>	
			<div class="form-inline text-center">
				<%= f.input :nap1, :as => :time, :minute_step => 15 , default: Time.parse("00:00") %>
				<%= f.input :nap2, :as => :time, :minute_step => 15 , default: Time.parse("00:00"),  :class=>"naptimes" %>
				<%= f.input :nap3, :as => :time, :minute_step => 15 , default: Time.parse("00:00"),  :class=>"naptimes" %>		
			</div><br />
				<%= f.input :naproutine, :label => 'Nap Time Routine',:input_html => { :cols => 5, :rows => 7 }   %>
		</div>
	</div>
		
	</div>
		<%= f.submit 'Update Kid', :class=>"btn btn-primary" %>
	<% end %>

</div> 



