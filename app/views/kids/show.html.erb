<br /><br />
<div class="col-xs-4">
	<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Profile</h3>
		  </div>
		  <div class="panel-body">
		  	<div class="avatar">
				<%= image_tag @kid.avatar, class: "img-responsive" if @kid.avatar.present? %>
		  	</div>
			   <h1><%= @kid.name %></h1>
				<i>DOB: <%= @kid.birthdate %></i>
				<br /><br />
				<p>Gender: <%= @kid.gender %></p>
				<br />
				<h3>Parent/Guardians</h3><br />
				 <%= @kid.parent1 %><br />
				 <%= @kid.parent2 %><br />
				<br />
			<div class="pull-right">
			<% if current_user && current_user == @kid.user %>
			<%= link_to 'Edit', edit_kid_path(@kid), :class => 'btn btn-primary' %>
	        <% end %>
		    </div>
		  </div>
	</div>
</div>
<div class="col-xs-8">
    <div class="row">
	    <div class="col-xs-6">
			<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Health and Insurance</h3>
				  </div>
				  <div class="panel-body">
				   Insurance Provider: <%= @kid.insuranceprovider %><br />
				   Physician Name: <%= @kid.physicianname %><br />
				   Physician Phone:<%= @kid.physicianphone %><br />
					<br />
				  </div>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Emergency Contacts</h3>
			  </div>
				  <div class="panel-body">
				   Contact 1:<%= @kid.parent1 %><br />
				   Contact 2:<%= @kid.parent2 %><br />
					<br />
				  </div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Favorites</h3>
				  </div>
				  <div class="panel-body">
				   Foods: <%= @kid.favfood %><br />
				   Drinks: <%= @kid.favdrink %><br />
				   Toys:  <%= @kid.favtoys %><br />
				   Activities: <%= @kid.favactivities %><br />
				   Music: <%= @kid.favmusic %><br />
					<br />
				  </div>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Sleep Routine</h3>
			  </div>
			  <div class="panel-body">
			   Bed Time: <%= @kid.bedtime.hour %>:<%= @kid.bedtime.min %><br />
			   Sleep Details: <%= @kid.sleepdetails %><br />
				<br />
			  </div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">No-Nos</h3>
			  </div>
			  <div class="panel-body">
			   Allergies: <%= @kid.allergies %><br />
			   Please avoid: <%= @kid.nonos %><br />
				<br />
			  </div>
			</div>
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Chores</h3>
			  </div>
			  <div class="panel-body">
			   Chores: <%= @kid.chores %><br />
				<br />
			  </div>
			</div>
		</div>
	</div>
</div>
	<div class="row">
	<div class="col-xs-12">
		<div class="col-xs-6">
			<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Favorite Books</h3>
				  </div>
				  <div class="panel-body">
				   <%	@kid.books.each_with_index do |book, index| %>
						<div class="col-xs-6 col-sm-6 hideOverflow">
							<%= image_tag book.image_link, class: "img-responsive " if book.image_link.present? %><br /><br />
							<b>Title:</b> <%= book.title %><br />
			    			<b>Author:</b> <%= book.authors %><br />
			    			<b>Description:</b> <%= book.description %><br />
						</div>
					<% end %>
					<br />
				
			     
				 <br /><br />
				 <div class="row"></div>
				 <% if current_user && current_user == @kid.user %>
					<div class="pull-right">
					<%= link_to 'Add a Favorite', kid_books_path(@kid), :class => 'btn btn-primary' %>
			     	</div>
			     	<% end %>
				 </div>
			</div>
		</div>
	    <div class="col-xs-6">
			<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Favorite Movies</h3>
				  </div>
				  <div class="panel-body">
				   <%	@kid.movies.each do |movie| %>
						<div class="col-xs-6 col-sm-6 hideOverflow">
							<%= image_tag movie.poster, class: "img-responsive " if movie.poster.present? %><br /><br />
							<b>Title:</b> <%= movie.title %><br />
				   		    <b>Cast:</b> <%= movie.cast_characters %><br />
				    	    <b>Company:</b> <%= movie.company %><br />
				   		    <b>Rating:</b> <%= movie.mpaa_rating %><br />
				    		<b>Trailer:</b> <%= movie.trailer_url %><br /><br />
							</div>
					<% end %>
					<br />
				
				 <br /><br />
				 <div class="row"></div>
					  <% if current_user && current_user == @kid.user %>
							<div class="pull-right">
								<%= link_to 'Add a Favorite', kid_movies_path(@kid), :class => 'btn btn-primary' %>
				     		</div>
				     	<% end %>
			      </div>
			</div>
		</div>
	</div>


</div>





