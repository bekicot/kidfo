
<div class="row">
<div class="col-xs-2 col-xs-offset-1  text-vertical-center">
		<h4>Kid</h4>
		<div class="img-responsive">
				<%= image_tag @kid.avatar, class: "img-circle avatar" if @kid.avatar.present? %>
		 </div><br />
			   <h4><%= @kid.name %></h4>
				<i><%= @kid.birthdate %></i><br /><br />
			<div class="pull-right">
			<% if current_user && current_user == @kid.user_id %>
			<%= link_to 'Edit', edit_kid_path(@kid), :class => 'btn btn-default btn-sm' %>
	        <% end %>
		    </div>
</div>
<div class="col-xs-4  text-vertical-center">
		<h4>Parent/Guardians</h4><br />
		<div class="row">
			<div class="col-xs-6 text-vertical-center" >
				<%= image_tag 'profile.png', class: "profileContact" %><br />
				 <%= @kid.parent1 %><br />
				 <%= @kid.parent1_phone %><br />
		    </div>
		    <div class="col-xs-6 text-vertical-center" >
				<%= image_tag 'profile.png', class: "profileContact" %><br />
				 <%= @kid.parent2 %><br />
				 <%= @kid.parent2_phone %><br />
		    </div>
		</div>
</div>
<div class="col-xs-4  text-vertical-center">
		<h4>Emergency Contacts</h4><br />
		<div class="row">
			<div class="col-xs-6 text-vertical-center" >
				<%= image_tag 'profile.png', class: "profileContact" %><br />
				 <%= @kid.emerg_contact_1 %><br />
				 <%= @kid.emerg_contact_1_phone %><br /><br />
		    </div>
		    <div class="col-xs-6" >
				<%= image_tag 'profile.png', class: "profileContact" %><br />
				 <%= @kid.parent2 %><br />
				 <%= @kid.parent2_phone %><br />
		    </div>
		</div>
</div>
</div>
<br /><br /><br />
<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
	    <div class="col-xs-4">
			<div class="panel panel-default">
				  <div class="panel-head-custom panel-heading">
				    <h3 class="panel-title">Health and Insurance</h3>
				  </div>
				  <div class="panel-body">
				   Insurance Provider: <%= @kid.insuranceprovider %><br />
				   Enrollee ID: <%= @kid.health_ins_enrollee_id %><br />
				   Group #: <%= @kid.health_ins_group_num %><br /><br />
				   Physician Name: <%= @kid.physicianname %><br />
				   Physician Phone:<%= @kid.physicianphone %><br />
					<br />
				  </div>
			</div>
		</div>
		<div class="col-xs-4">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Sleep Routine</h3>
			  </div>
			  <div class="panel-body">
			   Bed Time: <%= @kid.bedtime.hour %>:<%= @kid.bedtime.min %><br />
			   Sleep Details: <%= @kid.sleeproutine %><br />
				<br />
			  </div>
			</div>
		</div>
		<div class="col-xs-4">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">No-Nos</h3>
			  </div>
			  <div class="panel-body">
			   Allergies: <%= @kid.allergies %><br />
			   Please avoid: <%= @kid.nonos %><br />
				<br />
			  </div>
			</div>
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Chores</h3>
			  </div>
			  <div class="panel-body">
			   Chores: <%= @kid.chores %><br />
				<br />
			  </div>
			</div>
		</div>
	</div>
</div>
<div class="clear"></div>

<!-- Favorites Section: Food, Drinks, Activities -->
<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<div class="col-xs-4">
				  <h3>Favorite Foods</h3>
				  <hr>
				  <% if @favorites.any? %>
				   <%	@favorites.each do |food| %>
				   		<% if food.category == 'food' %>
							<b><%= food.name %></b><br />
			    			<b>Details:</b> <%= food.description %><br /><br />
						<% end %>
					<% end %>
				    <br />
				 <% end %>
		</div>

		<div class="col-xs-4">
				  <h3>Favorite Drinks</h3>
				  <hr>
				  <% if @favorites.any? %>
				   <%	@favorites.each do |drink| %>
				   		<% if drink.category == 'drink' %>
							<b><%= drink.name %></b><br />
			    			<b>Details:</b> <%= drink.description %><br /><br />
						<% end %>
					<% end %>
				    <br />
				 <% end %>
		</div>

		<div class="col-xs-4">
		
				  <h3>Favorite Activities</h3>
				  <hr>
				  <% if @favorites.any? %>
				   <%	@favorites.each do |activity| %>
				   		<% if activity.category == 'activity' %>
							<b><%= activity.name %></b><br />
			    			<b>Details:</b> <%= activity.description %><br /><br />
						<% end %>
					<% end %>
				    <br />
				 <% end %>
		</div>
		<div class="clear"></div>
		<button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#myFavoriteModal">
	        Add Favorite
	     </button>

	</div>
</div>
<br /><br /><br />


<!-- Favorites Section: Books and Movies -->
<div class="row">
	<div class="col-xs-12">
		<div class="col-xs-12">
			<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Favorite Books</h3>
				  </div>
				  <div class="panel-body">
				  <% if @favorites.any? %>
				   <%	@favorites.each do |book, index| %>
				   		<% if book.category == 'book' %>
						<div class="col-xs-4 col-sm-4 hideOverflow">
							<%= image_tag book.image_link, class: "img-responsive " if book.image_link.present? %><br /><br />
							<b>Title:</b> <%= book.name %><br />
			    			<b>Description:</b> <%= book.description %><br />
						</div>
						<% end %>
					<% end %>
				    <br />
				 <% end %>
				 <br /><br />
				 </div>
				
				 <% if current_user && current_user == @kid.user_id %>
				  <div class="panel-footer">
				 	<%= link_to 'Add Favorite Book', new_kid_book_path(@kid), :class => 'btn btn-primary' %>
				 </div>
				<% end %>
				
			</div>
		</div>

		<div class="col-xs-12">
			<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Favorite Movies</h3>
				  </div>
				  <div class="panel-body">
				  <% if @favorites.any? %>
				   <%	@favorites.each do |movie, index| %>
				   		<% if movie.category == 'movie' %>
						<div class="col-xs-4 col-sm-4 hideOverflow">
							<%= image_tag movie.image_link, class: "img-responsive " if movie.image_link.present? %><br /><br />
							<b>Title:</b> <%= movie.name %><br />
			    			<b>Cast:</b> <%= movie.movie_cast %><br />
			    			<b>Trailer:</b> <%= movie.movie_trailer_url %><br />
						</div>
						<% end %>
					<% end %>
				    <br />
				 <% end %>
				 <br /><br />
				 </div>
				 
				 <% if current_user && current_user == @kid.user_id %>
				 <div class="panel-footer">
				 	<%= link_to 'Add Favorite Movie', new_kid_movie_path(@kid), :class => 'btn btn-primary' %>
				 </div>
				<% end %>
				
			</div>
		</div>
	</div>
</div>

<!-- Modal -->
			<div class="modal fade" id="myFavoriteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			        <h4 class="modal-title" id="myModalLabel">Add a Favorite Food</h4>
			      </div>
			      <div class="modal-body">
			      
				<%= simple_form_for @favorite, :url => kid_favorites_path(@kid) do |f| %>
			
				<%= f.input :category,  :as  =>:select, :collection => Favorite::CATEGORIES %>
				<%= f.input :name %>
				<%= f.input :description, :label => 'Details' %>
				<br />

				
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			        <%= f.submit 'Add Favorite', :class=> 'btn btn-primary' %>
			        <% end %>
			      </div>
			    </div>
			</div>

